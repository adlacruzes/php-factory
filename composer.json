{
    "name": "adlacruzes/php-factory",
    "type": "library",
    "description": "Factories to generate classes and arrays with default values",
    "keywords": [
        "factory",
        "test",
        "generate",
        "default"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Andr√©s De la Cruz Escrig"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "adlacruzes/php-base-exception": "^2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8 || ^9.0",
        "adlacruzes/php-ci-tools": "^1"
    },
    "autoload": {
        "psr-4": {
            "Adlacruzes\\Factory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adlacruzes\\Factory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "composer-require-checker": "vendor/bin/ci-tools composer-require-checker",
        "php-cs-fixer": "vendor/bin/ci-tools php-cs-fixer fix --dry-run --diff --verbose --diff-format=udiff --show-progress=none --using-cache=yes --ansi",
        "phpstan": "vendor/bin/ci-tools phpstan analyse --no-progress --ansi",
        "security-checker": "vendor/bin/ci-tools security-checker security:check",
        "phpunit": "vendor/bin/phpunit",
        "ci": [
            "@composer-require-checker",
            "@php-cs-fixer",
            "@phpstan",
            "@security-checker",
            "@phpunit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
